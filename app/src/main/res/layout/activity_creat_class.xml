<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateClassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/nameError_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#f4045c"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/section_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Section"
            android:inputType="textMultiLine"
            android:maxLength="70" />

        <TextView
            android:id="@+id/sectionError_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="70 characters at most."
            android:textSize="14sp" />

        <EditText
            android:id="@+id/room_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Room"
            android:inputType="numberDecimal"
            android:maxLength="5" />

        <TextView
            android:id="@+id/roomError_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#f4045c"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>